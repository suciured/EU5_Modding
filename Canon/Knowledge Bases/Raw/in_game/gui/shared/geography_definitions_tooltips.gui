template Region_tooltip {
    ContextualTooltipType = {
        blockoverride "title_text" {
            raw_text = "[Region.GetNameWithNoTooltip]"
        }
        blockoverride "title_icon" {
            icon = {
                using = tooltip_title_icon_size
                texture = "gfx/interface/icons/map_modes/region.dds"
            }
        }

        blockoverride "concept_link" {
            text = [region|e]
        }

        blockoverride "tooltip_content" {
            TooltipDebugTextBlock = {
                blockoverride "text" {
                    debug_text = "[Region.GetDebugText]"
                }
            }

            TooltipStringPairList = {
                textcontext = "[Region.GetTooltipDesc]"
            }

            TooltipScrolledRowList = {
                datacontext = "[StringToRowList(Region.GetTooltipAreaList)]"
                blockoverride "block_title" {
                    text = "REGION_LIST_TITLE_TOOLTIP"
                }
            }
        }
    }
}

