	type bottomview = window {
		allow_outside = yes
		alwaystransparent = yes
		movable = no
		layer = top

		parentanchor = bottom
		widgetanchor = bottom

		size = { 100% 0% }

		vbox = {
			widgetanchor = bottom
			allow_outside = yes
			margin = { 550 0 }
			block "panel_setup" {}

			widget = {
				widgetanchor = bottom
				allow_outside = yes		

				block "pre_panel" {}

				vbox = {
					parentanchor = hcenter|top
					widgetanchor = hcenter|bottom
					allow_outside = yes
					alwaystransparent = no
					filter_mouse = all

					block "panel_content" {}
				}

				block "post_panel" {}
			}
		}
	}
