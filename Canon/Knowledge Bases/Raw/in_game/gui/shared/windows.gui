	# LATERALVIEWS
	type lateralview_topbuttons = widget {
		block "size" {
			size = { 100% 40 }
		}
		allow_outside = yes

		widget = {
			parentanchor = right
			size = { 40 40 }
			
			ui_direction_button_holder_right = {}

			button_close_alt = {	
				blockoverride "close_onclick" {
					onclick = "[LateralView.Close]"
				}
	
				blockoverride "close_inputaction" {
					input_action = "[Select_CString(LateralView.IsLeftPanel,'close_window_left', 'close_window_right')]"
					use_global_input_instance = yes
				}
			}
		}

		widget = {
			size = { 40 40 }
			
			ui_direction_button_holder_left = {}

			button_back_alt = {	
				blockoverride "back_onclick" {
					onclick = "[LateralView.GoBack]"
					enabled = "[LateralView.CanGoBack]"
					onrightclick = "[LateralView.ToggleSelectLateralViewHistory(PdxGuiWidget.Self)]"
					input_action = "[Select_CString(LateralView.IsLeftPanel,'previous_window_left', 'previous_window_right')]"
					use_global_input_instance = yes
				}
			}
		}
	}

