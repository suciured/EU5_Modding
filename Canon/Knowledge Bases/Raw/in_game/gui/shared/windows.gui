	type window_bottom_paper_template = widget {
		size = { 100% 30 }
		parentanchor = bottom
		alwaystransparent = yes
		
		icon = {
			size = { 100% 100% }
			alwaystransparent = yes
			using = window_bottom_paper_shadow_texture
			alpha = 0.5

			block "image_prop" {}
	
			modify_texture = {
				using = color_black_texture
				blend_mode = multiply
			}
		}
	
		icon = {
			size = { 100% 100% }
			alwaystransparent = yes
			using = window_bottom_paper_texture

			block "image_prop" {}
	
			modify_texture = {
				using = color_bg_brown_texture
				blend_mode = multiply
			}
		}
	}

	type window_top_paper_template = widget {
		size = { 100% 50 }
		parentanchor = top
		alwaystransparent = yes
		
		icon = {
			texture = "gfx/interface/component_decoration/window_top_paper_shadow.dds"
			texture_density = 2
			spriteType = corneredstretched
			size = { 100% 100% }
			alwaystransparent = yes
			
			alpha = 0.8
			
			block "image_prop" {}
	
			modify_texture = {
				using = color_black_texture
				blend_mode = multiply
			}
		}
	
		icon = {
			size = { 100% 15 }
			alwaystransparent = yes
			using = window_top_paper_texture

			modify_texture = {
				texture = "gfx/interface/component_decoration/window_top_paper.dds"
				texture_density = 2
				spriteType = Corneredstretched
				blend_mode = add
				alpha = 0.3

			}
	
			modify_texture = {
				using = color_bg_brown_texture
				blend_mode = multiply
			}
		}
	}

	type lateralview = widget {
		size = { 100% 100% }
		alwaystransparent = no
		filter_mouse = all
		allow_outside = yes
		block "snd_panel_default" { using = snd_UI_panel }

		vbox = {
			using = lateralview_margins
			widget = {
				using = layoutpolicy_expanding
				vbox = {
					using = layoutpolicy_expanding
					block "panel_header" {}

					hbox = {
						using = layoutpolicy_expanding

						widget = {
							using = layoutpolicy_expanding

							vbox = {
								using = layoutpolicy_expanding
								block "panel_content" {}
							}

							window_bottom_paper_template = {}
						}

						# block "panel_content_side" {
							icon = {
								visible = "[LateralView.IsRightPanel]"
								layoutpolicy_vertical = expanding
								size = { 30 -1 }

								using = color_bg_brown_texture
								using = overlay_window
								using = overlay_leather
							}
						# }
					}
				}
			}
		}

		lateralview_topbuttons = {}
	}

