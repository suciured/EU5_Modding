
template social_text_style_template {
    using = sdk_text_style_template
}

template social_button_style_template {
    using = sdk_button_style_template
}

template social_button_size_template {
    using = sdk_button_size_template
}

template social_generic_entry_template {
    layoutpolicy_horizontal = expanding

    widget = {
        size = { 150 30 }
        hbox = {
            social_required_textbox={}
            text_single = {
                layoutpolicy_horizontal = expanding
                layoutpolicy_vertical = expanding

                block "title" {
                    raw_text = "#D Title:#!"
                }
            }
        }
    }

    block "social_generic_entry_field" {}
}

template social_textbox_entry_template {
    widget = {
        size = { 300 30 }

        hbox = {
            margin = { 10 0 }
            using = editbox_background

            editbox = {
                name = "social_editbox"

                layoutpolicy_horizontal = expanding
                layoutpolicy_vertical = expanding

                default_format = "#high"

                alwaystransparent = no
                focuspolicy = all
                cursorcolor = { 1 1 0.5 1 }
                selectioncolor = { 0.45 0.45 0.45 0.7 }
                maxcharacters = 255

                block "social_editbox" {}

                block "editbox_text" {
                    raw_text = "#D Enter something#!"
                }

                block "password" {
                    password = no
                }
            }
        }
    }
}

