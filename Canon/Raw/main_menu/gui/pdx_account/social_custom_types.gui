template social_window_template {
    using = bg_window_default_alt
    resizable = no
    movable = yes
    allow_outside = yes

    vbox = {
        resizeparent = yes
        using = sdk_window_vbox_template
    }

    block "close_button_obj" {
        widget = {
            using = sdk_close_button_template
        }
    }
}