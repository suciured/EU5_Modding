
template Line_DynastyTree {
	gfxtype = linegfx
	effectname = "PdxGuiLineScreenSpace"
	width = 8
	line_cap = yes
	color = { 0.62 0.52 0.26 1.0 }
	alpha = 0.8

	# animation_speed = { 0.15 0.15 }
	texture = "gfx/lines/tiling_noise.dds"
	uv_scale = { 1.0 1.0 }

	mask = "gfx/lines/mask.dds"
	mask_uv_scale = { 0.1 1.0 }
}

template Line_Tree {
	gfxtype = linegfx
