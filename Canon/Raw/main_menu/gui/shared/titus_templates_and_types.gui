types TitusStuff
{
	# TODO DEPRECATE
	type editbox_standard = margin_widget {
		margin_left = 5
		margin_right = 5
		margin_top = 5

		block "editbox_standard_size" {
			size = { 72 30 }
		}

		using = tooltip_es

		editbox = {
			block "editbox_properties" {
				name = "give_me_a_unique_name_for_code_to_find_me"
			}

			align = top|left
			size = {100% 100%}
			alwaystransparent = no
			focuspolicy = all
			default_format = "#high"
		}
	}

	type editbox_search_field = hbox {
		spacing = 5

		editbox_standard = {
			layoutpolicy_horizontal = expanding
		}
	}

	type button_select_arrow = button_icon {
		size = { 20 20 }
		texture = "gfx/interface/buttons/flats/button_simple.dds"
		modify_texture = {
			using = overlay_stone_texture
			blend_mode = overlay
			alpha = 0.3
		}
		modify_texture = {
			using = overlay_window_texture
			blend_mode = overlay
			alpha = 0.3
		}
		tooltipwidget = {
			ContextualTooltipType = {
				blockoverride "title_icon" {
					icon = {
						using = tooltip_title_icon_size
						texture = "gfx/interface/icons/flat_icons/tabicons/settings_flat_icon.dds"	
					}
				}
				blockoverride "title_text" {
					text = "GAME_RULES_CHANGE"
				}
				blockoverride "tooltip_content" {
					TooltipTextBlock = {
						blockoverride "text" {
							text = "GAME_RULES_APPLY"
						}
					}
				}
			}
		}
	}
}

