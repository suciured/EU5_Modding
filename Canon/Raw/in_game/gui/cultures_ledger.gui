lateralview_full = {	
	name = "cultures_ledger"
	blockoverride "panel_header" {
		window_header_alt = {
			blockoverride "header_text" {
				text = "LEDGER_TAB"
			}
			blockoverride "window_header_alt_color_texture"{
				using = color_default_brown_texture
			}
		}
	}

	blockoverride "panel_content" {
		vbox = { 
			header_main_tabs = { #
				blockoverride "content" {
					using = ledger_tabs_template
				}
			}

			vbox = {
				using = layoutpolicy_expanding
				using = bg_main_inner_alt
				using = window_main_tabs_margin_alt

				filtered_sorted_list = {
					margin_top = 10
					datacontext = "[CulturesLedger.GetCultureItemsSortSearch]"
					
					blockoverride "sort_buttons_filtered_list" {
						sort_by_key_button = {
							name = "name"
							using = layoutpolicy_expanding
						}

						sort_by_key_button = {
							name = "population"
							using = layoutpolicy_expanding
						}

						sort_by_key_button = {
							name = "language"
							using = layoutpolicy_expanding
						}

						sort_by_key_button = {
							name = "influence"
							using = layoutpolicy_expanding
						}

						sort_by_key_button = {
							name = "tradition"
							using = layoutpolicy_expanding
						}
						sort_by_key_button = {
							name = "country"
							layoutpolicy_vertical = expanding
							size = { 90 -1 }
						}
					}

					blockoverride "scroll_list_content" {
						addcolumn = 100%
						addrow = 45
						setitemsizefromcell = yes

						datamodel = "[CulturesLedger.GetCultures]"
						item = {
							using = ledger_item_template
							blockoverride "ledger_item_content"{
								widget = {
									using = layoutpolicy_expanding

									hbox = {
										margin = { 10 0 }
										spacing = 10

										datacontext = "[CultureItem.GetCulture]"
									
										text_single = {
											using = layoutpolicy_expanding
											layoutstretchfactor_horizontal = 1
											autoresize = no
											align = left|nobaseline
											margin_left = 5

											text = "[CultureItem.GetCulture.GetNameWithNoTooltip]"
											default_format = "#yellow_titles"
											
											tooltipwidget = {
												using = culture_tooltip
											}
										}

										text_single = {
											using = layoutpolicy_expanding
											layoutstretchfactor_horizontal = 1
											autoresize = no
											align = left|nobaseline

											raw_text = "[CultureItem.GetCulture.GetTotalPopulation]@population!"
										}
										
										
										
										text_single = {
											using = layoutpolicy_expanding
											layoutstretchfactor_horizontal = 1
											autoresize = no
											align = left|nobaseline

											text = "[CultureItem.GetCulture.GetLanguage.GetNameWithNoTooltip]"
											datacontext = "[CultureItem.GetCulture.GetLanguage]"
											
											tooltipwidget = {
												using = LanguageTooltip
											}
											
											
											default_format = "#subtle_name"
										}

										
										text_single = {
											using = layoutpolicy_expanding
											layoutstretchfactor_horizontal = 1
											autoresize = no
											align = left|nobaseline

											text = "[CultureItem.GetCulture.GetInfluence|2]"
											tooltipwidget = {
												using = CulturalInfluence_tooltip
											}
										}
										text_single = {
											using = layoutpolicy_expanding
											layoutstretchfactor_horizontal = 1
											autoresize = no
											align = left|nobaseline

											text = "[CultureItem.GetCulture.GetTradition|2]"
											
											tooltipwidget = {
												using = CulturalTradition_tooltip
											}
										}

										country_flag_small = {
											visible = "[CultureItem.GetCulture.HasDominantCountry]"
											datacontext = "[CultureItem.GetCulture.GetDominantCountry]"
										}
										widget = {
											size = { 36 24 }
											visible = "[Not(CultureItem.GetCulture.HasDominantCountry)]"
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
