					blockoverride "icon_setup" {
						texture = "gfx/interface/icons/flat_icons/trade_advantage.dds"

						glow = {
							name = "drop_shadow"
							glow_radius = 3
							color = {0.0 0.0 0.0 1.0}
							alpha = 0.3
						}
					}
					blockoverride "top_text_setup" {
						text = "game_concept_merchant_power"
