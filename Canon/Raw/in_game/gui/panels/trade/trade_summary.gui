					}
					blockoverride "bottom_text_setup" {
						text = "[Player.GetModifierValueNoFormat('global_merchant_power')]"
					}
					datacontext = "[Player]"
					tooltipwidget = {
						using = merchant_power_tooltip
					}
				}

				icon_text_2rows = {
										
					blockoverride "base_setup" {
						layoutstretchfactor_vertical = 1
